{
    "luau-lsp.ignoreGlobs": [
        ".lune/**",
        ".dist/**",
        "[Pp]ackages/**",
    ],
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua",
        "editor.formatOnSave": true
    },
    "luau-lsp.require.mode": "relativeToFile",
    "luau-lsp.require.directoryAliases": {
        "@components": "src/components",
        "@packages": "packages",
        "@src": "src"
    }
}